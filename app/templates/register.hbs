
<div class="container">
  <div class="col-md-12">
    <div class="col-md-4 col-md-offset-4">
      <h2>Registration</h2>
      <div {{bind-attr class=":form-group isValidUsername::has-warning"}}>
        <label class="control-label">Username</label>
         {{input value=username class="form-control" placeholder="Username"}}
       </div>

       <div {{bind-attr class=":form-group isValidPassword::has-warning"}}>
         <label class="control-label">Password</label>
         {{input type="password" value=password class="form-control" placeholder="Password"}}
       </div>
       <button type="submit" {{action 'register'}} {{bind-attr disabled=isInValid }} class="btn btn-default">Register</button>
       {{#link-to 'login' class='pull-right link-with-margin'}}I have account{{/link-to}}
    </div>
  </div>
</div>
