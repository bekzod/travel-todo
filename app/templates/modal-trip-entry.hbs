{{#modal-dialog action="close"}}

  <div class="form-group col-md-3">
     <label>Start Date</label>
     {{pik-a-day disabled=isSaving class="form-control" selectedDate=model.startDate minDate=minDate}}
   </div>

  <div class="form-group col-md-3">
     <label>End Date</label>
     {{pik-a-day disabled=isSaving class="form-control" selectedDate=model.endDate minDate=model.startDate }}
  </div>

  <div class="col-md-4">
    <label>Days in trip</label>
    <div>
      <div class="btn-group" role="group">
        <button {{action 'decrementDays'}} {{bind-attr disabled=disableDecrementBtn}} type="button" class="btn btn-default">
          <span class="glyphicon glyphicon-minus"></span>
        </button>
        <div class="btn btn-default">{{date-duration model.endDate model.startDate 'days'}}</div>
        <button {{action 'incrementDays'}} type="button" class="btn btn-default">
          <span class="glyphicon glyphicon-plus"></span>
        </button>
      </div>
    </div>

  </div>

  <div class="form-group col-md-12">
     <label>Destination</label>
     {{google-geo-input disabled=isSaving value=model.destination class="form-control"}}
   </div>

   <div class="form-group col-md-12">
     <label>Comment</label>
     {{textarea disabled=isSaving  value=model.comment class="form-control"}}
   </div>

  <div class="col-md-12">
    <button {{bind-attr disabled=isSaving}} class='btn btn-danger' {{action "close"}}>Cancel</button>
    <button {{bind-attr disabled=disableSaveBtn}} class='btn btn-primary' {{action "save"}}>Save</button>
  </div>
{{/modal-dialog}}
